<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HomeTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Set status bar color to match background -->
        <item name="android:statusBarColor">@color/background_cream</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Ensure the background color is applied to the whole window -->
        <item name="android:windowBackground">@color/background_cream</item>
    </style>
</resources>